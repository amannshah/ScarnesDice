<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aman.com.scarnesdice.MainActivity">

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score: 0 Computer Score: 0"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/textView1"
        android:src="@drawable/dice1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please play you turn"
        android:textSize="20sp"
        android:layout_below="@+id/imageView"/>

    <Button
        android:id="@+id/rollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll"
        android:layout_below="@+id/textView2"
        android:onClick="rollButton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/holdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold"
        android:layout_toRightOf="@+id/rollButton"
        android:layout_below="@+id/textView2"
        android:onClick="holdButton"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_toRightOf="@+id/holdButton"
        android:layout_below="@+id/textView2"
        android:onClick="resetButton"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/holdButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="play again"
        android:visibility="invisible"
        android:onClick="playAgain"/>

</RelativeLayout>
